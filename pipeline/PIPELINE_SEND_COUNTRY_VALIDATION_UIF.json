{
	"name": "PIPELINE_SEND_COUNTRY_VALIDATION_UIF",
	"properties": {
		"activities": [
			{
				"name": "GET_MAILING_LIST",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings",
							"skipLineCount": 1
						}
					},
					"dataset": {
						"referenceName": "Dataset_Email_Notification_Recipients_UIF",
						"type": "DatasetReference",
						"parameters": {
							"containerName": {
								"value": "drivers/@{toLower(pipeline().globalParameters.env)}",
								"type": "Expression"
							},
							"folderName": "email_list",
							"fileName": "mail_list.csv"
						}
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "FOR_EACH_MAIL_ID",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "GET_MAILING_LIST",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('GET_MAILING_LIST').output.value",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Append variable",
							"type": "AppendVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "MAIL_ARRAY",
								"value": {
									"value": "@item().Prop_0",
									"type": "Expression"
								}
							}
						}
					]
				}
			},
			{
				"name": "Set EmailTo",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "FOR_EACH_MAIL_ID",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "MAIL_TO",
					"value": {
						"value": "@join(variables('MAIL_ARRAY'),';')",
						"type": "Expression"
					}
				}
			},
			{
				"name": "SEND_MAIL",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "Set EmailTo",
						"dependencyConditions": [
							"Succeeded"
						]
					},
					{
						"activity": "Set body",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://prod-08.northcentralus.logic.azure.com:443/workflows/dc27c422a5dd4de69ab23fb5b6ee1fc8/triggers/manual/paths/invoke?api-version=2016-10-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=hRwvui4AP5DeAi7URGYjdwx_NefbglXD6zrnGWfJVmQ",
					"method": "POST",
					"headers": {
						"Content-Type": "application/json"
					},
					"body": {
						"value": "{\n    \"To\": \"@{variables('MAIL_TO')}\",\n    \"Subject\": \"@{pipeline().parameters.SUBJECT}\",\n    \"Content\": \"@{variables('BODY')}\"\n}",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Set body",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Set Result",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "BODY",
					"value": {
						"value": "<!DOCTYPE html>\n<html>\n<head>\n<style>\ntable {\n  font-family: arial, sans-serif;\n  border-collapse: collapse;\n}\n\ntd, th {\n  border: 1px solid #dddddd;\n  text-align: left;\n  padding: 8px;\n}\n\ntr:nth-child(even) {\n  background-color: #dddddd;\n}\n</style>\n</head>\n<body>\n\n<p><strong>COUNTRY PRODUCT VALIDATION RESULTS</strong></p>\n\n<table>\n  <tr>\n    <th>SNAPSHOT_NAME</th>\n    <th>COUNTRY</th>\n\t<th>KPI_COUNT</th>\n\t<th>LAST_LOAD_TS</th>\n\t<th>IS_ALL_ZERO_VALUE</th>\n\t<th>IS_ALL_ZERO_YTD</th>\n\t<th>IS_ALL_ZERO_PLAN</th>\n  </tr>\n  @{variables('RESULT')}\n</table>\n</body>\n</html>",
						"type": "Expression"
					}
				}
			},
			{
				"name": "READING_COUNTRY_VALIDATION_TBL",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SnowflakeSource",
						"query": "SELECT * FROM INT_METADATA.COUNTRY_PRODUCT_SNAPSHOT_COUNT ORDER BY COUNTRY",
						"exportSettings": {
							"type": "SnowflakeExportCopyCommand"
						}
					},
					"dataset": {
						"referenceName": "DATASET_SNOWFLAKE_TABLE_UIF",
						"type": "DatasetReference",
						"parameters": {
							"schema_name": "INT_METADATA",
							"table_name": "COUNTRY_PRODUCT_SNAPSHOT_COUNT"
						}
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "FOR_EACH_CASE",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "READING_COUNTRY_VALIDATION_TBL",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('READING_COUNTRY_VALIDATION_TBL').output.value",
						"type": "Expression"
					},
					"batchCount": 1,
					"activities": [
						{
							"name": "Append variable1",
							"type": "AppendVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "RESULT_ARRAY",
								"value": {
									"value": "<tr>\n    <td>@{item().SNAPSHOT_NAME}</td>\n    <td>@{item().COUNTRY}</td>\n    <td>@{item().KPI_COUNT}</td>\n    <td>@{item().LAST_LOAD_TS}</td>\n    <td>@{item().IS_ALL_ZERO_VALUE}</td>\n    <td>@{item().IS_ALL_ZERO_YTD}</td>\n    <td>@{item().IS_ALL_ZERO_PLAN}</td>\n</tr>",
									"type": "Expression"
								}
							}
						}
					]
				}
			},
			{
				"name": "Set Result",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "FOR_EACH_CASE",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "RESULT",
					"value": {
						"value": "@join(variables('RESULT_ARRAY'), ' ')",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"SUBJECT": {
				"type": "string"
			}
		},
		"variables": {
			"MAIL_ARRAY": {
				"type": "Array"
			},
			"MAIL_TO": {
				"type": "String"
			},
			"BODY": {
				"type": "String"
			},
			"RESULT_ARRAY": {
				"type": "Array"
			},
			"RESULT": {
				"type": "String"
			}
		},
		"folder": {
			"name": "UIF/0_ARCHIVE/ALERTS_NOTIFICATIONS"
		},
		"annotations": []
	}
}